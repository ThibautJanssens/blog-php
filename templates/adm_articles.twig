{% extends 'adm_common.twig' %}
{% block content %}
<p>Here is a list of all your articles<p>
<table class="table table-hover">
  <thead class="bg-danger text-white">

    <tr>
      <th scope="col" id="articleID">#</th>
      <th scope="col" id="articleTitle">Title</th>
      <th scope="col" id="articleContent">Content (preview)</th>
      <th scope="col" id="articleAuthor">Author</th>
      <th scope="col">Edit</th>
      <th scope="col">Delete</th>
    </tr>
  </thead>
  <tbody>
    {% for article in article %}
      <tr>
        <th scope="row">1</th>
        <td>{{ article.title }}</td>
        <td>{{ article.content }}</td>
        <td>{{ article.author }}</td>
        <td><i class="fas fa-edit"></i></td>
        <td><i class="fas fa-trash"></i></td>
      </tr>
    {% endfor %}

    <tr>
      <th scope="row">2</th>
      <td>Article 2</td>
      <td>This is an example of an article. You can edit it or...</td>
      <td>Jeremy</td>
      <td><i class="fas fa-edit"></i></td>
      <td><i class="fas fa-trash"></i></td>
    </tr>
  </tbody>
</table>
{% endblock %}
