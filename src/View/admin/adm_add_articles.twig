{% extends 'admin/adm_common.twig' %}
{% block content %}
<form>
    <div class="row">
      <div class="col-sm py-3">
        <label for="addArticleTitle">Title for your article</label>
        <input id="addArticleTitle" type="text" class="form-control form-control-lg" placeholder="Your title" required>
        <small  class="form-text text-muted pb-3">Choose something cool!</small>

        <label for="addArticleContent">Content of your article</label>
        <div class="btn-toolbar pb-2" role="toolbar" aria-label="Toolbar">
          <div class="btn-group mr-2" role="group" aria-label="Styling">
            <button type="button" class="btn btn-danger">H1</button>
            <button type="button" class="btn btn-danger">H2</button>
            <button type="button" class="btn btn-danger">H3</button>
            <button type="button" class="btn btn-danger">Bold</button>
            <button type="button" class="btn btn-danger">Italic</button>
          </div>
          <div class="btn-group mr-2" role="group" aria-label="Links">
            <button type="button" class="btn btn-danger">Link</button>
            <button type="button" class="btn btn-danger">Media</button>
          </div>
        </div>
        <textarea type="textarea" rows="15" class="form-control form-control-sm" id="addArticleContent" placeholder="Content" required></textarea>
      </div>
      <div class="col-md-auto py-3">
        <label>Choose a category</label>
        <div class="container-fluid background-white">
          <select class="custom-select">
            {% for categorie in categories %}
              <option value="cat_{{ categorie['category_id'] }}">{{ categorie['cat_name'] }}</option>
            {% endfor %}
          </select>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-sm py-3 mt-2 text-center">
        <button type="submit" class="btn btn-primary">Save</button>
      </div>
    </div>
    <div class="row">
      <div class="col-sm py-3">
        <label for="addArticleTitle">Comments for this article</label>
        <table class="table table-hover">
          <thead class="bg-danger text-white">
            <tr>
              <th scope="col">#</th>
              <th scope="col">User</th>
              <th scope="col">Comment</th>
              <th scope="col">Delete</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <th scope="row">1</th>
              <td>Sam</td>
              <td>Pas mal!</td>
              <td><i class="fas fa-trash"></i></td>
            </tr>
            <tr>
              <th scope="row">2</th>
              <td>Julien</td>
              <td>Anthem sans moi!! SÃ©rieux??</td>
              <td><i class="fas fa-trash"></i></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
</form>
{% endblock %}
