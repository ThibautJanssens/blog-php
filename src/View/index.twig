{% extends '/common/common.twig' %}

{% block content %}
  <div class="main-content">
    {% for article in articles|reverse %}
    <div class="card-deck card-article">
      <div class="card">
        <img class="card-img-top" src="./images/test.jpg" alt="Card image cap">
        <div class="card-body">
          <h2 class="card-title title">{{ article['title'] }}</h2>
          <h5 class="card-author author">By {{ article['username'] }}</h5>
          <div class="card-text content">{{ article['content'] }}</div>
          <h6 class="card-date date">{{ article['date_publication']|slice(0, 10) }}</h6>
        </div>
        <div class="card-footer comments-container">
          <h5>Comments</h5>
          <p>No comments yet</p>
          <button type="button" class="btn btn-secondary">New comment</button>
      </div>
      </div>
    </div>
    {% endfor %}

    <nav aria-label="Page navigation">
      <ul class="pagination justify-content-end">
        <li class="page-item"><a class="page-link" href="#">1</a></li>
        <li class="page-item"><a class="page-link" href="#">2</a></li>
        <li class="page-item"><a class="page-link" href="#">3</a></li>
      </ul>
    </nav>
  </div>
{% endblock %}
