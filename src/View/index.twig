{% extends '/common/common.twig' %}

{% block content %}
  <div class="main-content">
    <div class="row m-0 justify-content-center">
      {% set i = 0 %}
      {% for article in articles|reverse if i < 5 %}
      <div class="card-container col-lg-6">
        <div class="card card-articles">
          <div class="card-body">
            <h5 class="card-title title">{{ article['title'] }}</h5>
            <h6 class="card-author author">By {{ article['username'] }}</h6>
            <div class="card-text content">{{ article['content'] }}</div>
            <a href="#" class="btn btn-secondary">Read More</a>
          </div>
        </div>
      </div>
      {% set i = i + 1 %}
      {% endfor %}
    </div>

    <nav aria-label="Page navigation">
      <ul class="pagination justify-content-end">
        <li class="page-item"><a class="btn btn-dark" href="articles">All articles</a></li>
      </ul>
    </nav>
  </div>
{% endblock %}
