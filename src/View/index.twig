{% extends '/common/common.twig' %}

{% block content %}
  <div class="main-content">
    <div class="row m-0 justify-content-center">
      {% for article in articles %}
      <div class="card-container col-lg-6">
        <div class="card card-articles">
          <img class="card-img-top" src="./images/test.jpg" alt="Card image cap">
          <div class="card-body">
            <h5 class="card-title title">{{ article['title'] }}</h5>
            <h6 class="card-author author">By {{ article['username'] }}</h6>
            <div class="card-text content">{{ article['content'] }}</div>
            <a href="#" class="btn btn-dark">Read More</a>
          </div>
        </div>
      </div>
      {% endfor %}
    </div>

    <nav aria-label="Page navigation">
      <ul class="pagination justify-content-end">
        <li class="page-item"><a class="page-link" href="#">1</a></li>
        <li class="page-item"><a class="page-link" href="#">2</a></li>
        <li class="page-item"><a class="page-link" href="#">3</a></li>
      </ul>
    </nav>
  </div>
{% endblock %}
